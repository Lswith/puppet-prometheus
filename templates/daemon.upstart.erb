# Prometheus <%= @daemon_name %> Exporter (Upstart unit)
description "Prometheus exporter <%= @daemon_name %>"
start on runlevel [2345]
stop on runlevel [06]

env EXPORTER=<%= @bin_dir %>/<%= @daemon_name %>
env USER=<%= @user %>
env GROUP=<%= @group %>
env DEFAULTS=/etc/default/<%= @daemon_name %>
env RUNDIR=/var/run/<%= @daemon_name %>
env PID_FILE=/var/run/<%= @daemon_name %>/<%= @daemon_name %>.pid
pre-start script
  [ -e $DEFAULTS ] && . $DEFAULTS

  mkdir -p $RUNDIR           || true
  chmod 0750 $RUNDIR         || true
  chown $USER:$GROUP $RUNDIR || true
end script

script
    # read settings like GOMAXPROCS from "/etc/default/<%= @daemon_name %>", if available.
    [ -e $DEFAULTS ] && . $DEFAULTS

    export GOMAXPROCS=${GOMAXPROCS:-2}
    exec start-stop-daemon -c $USER -g $GROUP -p $PID_FILE -x $EXPORTER -S -- <%= @options %>
end script

respawn
respawn limit 10 10
kill timeout 10
