[Unit]
Description=Prometheus exporter <%= @exporter_name %>
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= @user %>
Group=<%= @group %>
ExecStart=<%= @bin_dir %>/<%= @exporter_name %>
  <%= @options %>
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always
RestartSec=42s

[Install]
WantedBy=multi-user.target
