[Unit]
Description=Prometheus exporter for machine metrics, written in Go with pluggable metric collectors.
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= scope.lookupvar('prometheus::statsd_exporter::user') %>
Group=<%= scope.lookupvar('prometheus::statsd_exporter::group') %>
ExecStart=<%= scope.lookupvar('prometheus::statsd_exporter::bin_dir') %>/statsd_exporter \
  -statsd.mapping-config=<%= scope.lookupvar('prometheus::statsd_exporter::mapping_config_path') %> <%= scope.lookupvar('prometheus::statsd_exporter::extra_options') %>
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always
RestartSec=42s

[Install]
WantedBy=multi-user.target
