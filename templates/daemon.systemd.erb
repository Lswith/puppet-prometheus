[Unit]
Description=Prometheus <%= @name %>
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= @user %>
Group=<%= @group %>
<%- require 'shellwords' -%>
ExecStart=<%= @bin_dir %>/<%= @name %> <%= Shellwords.escape(@options) %>
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always
RestartSec=42s

[Install]
WantedBy=multi-user.target
