# Prometheus Node Exporter (Upstart unit)
description "Prometheus exporter for machine metrics, written in Go with pluggable metric collectors"
start on runlevel [2345]
stop on runlevel [06]

env STATSD_EXPORTER=<%= scope.lookupvar('prometheus::statsd_exporter::bin_dir') %>/statsd_exporter
env MAPPING_CONFIG_PATH=<%= scope.lookupvar('prometheus::statsd_exporter::mapping_config_path') %>
env USER=<%= scope.lookupvar('prometheus::statsd_exporter::user') %>
env GROUP=<%= scope.lookupvar('prometheus::statsd_exporter::group') %>
env DEFAULTS=/etc/default/statsd_exporter
env RUNDIR=/var/run/statsd_exporter
env PID_FILE=/var/run/statsd_exporter/statsd_exporter.pid
pre-start script
  [ -e $DEFAULTS ] && . $DEFAULTS

  mkdir -p $RUNDIR           || true
  chmod 0750 $RUNDIR         || true
  chown $USER:$GROUP $RUNDIR || true
end script

script
    # read settings like GOMAXPROCS from "/etc/default/statsd_exporter", if available.
    [ -e $DEFAULTS ] && . $DEFAULTS

    export GOMAXPROCS=${GOMAXPROCS:-2}
    exec start-stop-daemon -c $USER -g $GROUP -p $PID_FILE -x $STATSD_EXPORTER -S -- -statsd.mapping-config=$MAPPING_CONFIG_PATH <%= scope.lookupvar('prometheus::statsd_exporter::extra_options') %>
end script

respawn
respawn limit 10 10
kill timeout 10
